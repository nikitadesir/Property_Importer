<div class="space-y-6">

  <h1 class="font-header text-3xl font-extrabold text-black-900">
    Upload Properties
  </h1>

  <p class="text-black-600 font-bold">
    Upload a CSV file containing property data.
  </p>

  <div class="p-4 bg-blue-500 text-white rounded space-y-4">
    <h2 class="font-header text-2xl font-extrabold">
      Select CSV File
    </h2>

    <%= form_with url: preview_imports_path, 
                  method: :post, 
                  multipart: true, 
                  data: { turbo: false }, 
                  local: true do |form| %>

      <div class="space-y-2">
        <%= form.label :file, "CSV File", class: "font-bold" %>
        <%= form.file_field :file, 
              accept: '.csv', 
              required: true, 
              class: "block w-full bg-white text-black p-2 rounded" %>
      </div>

      <div class="pt-4">
        <%= form.submit "Preview Upload", 
              class: "bg-green-500 text-white px-4 py-2 rounded" %>
      </div>

    <% end %>
  </div>

</div>
